{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@aws-sdk/client-bedrock-runtime": [
        "tests/type-stubs/aws-sdk/client-bedrock-runtime.d.ts"
      ],
      "@smithy/*": [
        "tests/type-stubs/@smithy/*"
      ]
    },
    "typeRoots": [
      "tests/type-stubs"
    ],
    "types": [],
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.ts",
    "node_modules",
    "src/bedrock-client.ts"
  ]
}
